<%= form_for [ :admin, @client], html: { multipart: true } do |f|  -%>

    <% if @client.errors.any? %>
        <ul>
          <% @client.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <p>
      <%= f.label :name, "Nome:" %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :address, "Endereço:" %>
      <%= f.text_field :address %>
    </p>

    <p>
      <%= f.label :onwer, "Responsável:" %>
      <%= f.text_field :onwer%>
    </p>


    <p>
      <%= f.label :phone, "Telefone:" %>
      <%= f.text_field :phone%>
    </p>

    <p>
      <%= f.label :cellphone, "Celular:" %>
      <%= f.text_field :cellphone %>
    </p>


    <p>
      <%= f.label :email, "E-mail:" %>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :logotype %>
      <%= f.file_field :logotype %>
    </p>

    <p>
      <%= f.label :description, "Observações:" %>
      <%= f.text_area :description %>
    </p>

    <%= f.submit :class => 'btn' -%>

<% end -%>