<%= form_for [ :admin, @category] do |f|  -%>
    <% if @category.errors.any? %>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>


    <p>
      <%= f.label :name, "Nome:" %>
      <%= f.text_field :name %>
    </p>


    <%= f.submit :class => 'btn' -%>

<% end -%>
