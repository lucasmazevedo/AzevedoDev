<%= form_for [ :admin, @work], html: { multipart: true }  do |f|  -%>

    <% if @work.errors.any? %>
        <ul>
          <% @work.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <p>
      <%= f.label "Categoria:" %>
    <%= select("work", "category_id", Category.all.collect {|c| [ c.name, c.id ] }, {include_blank: 'Selecione uma Categoria'}) %>
    </p>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>


    <p>
      <%= f.label :link %>
      <%= f.text_field :link %>
    </p>

    <p>
      <%= f.label :tags %>
      <%= f.text_field :tags %>
    </p>


    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </p>

    <%= f.submit :class => 'btn' -%>

<% end -%>
